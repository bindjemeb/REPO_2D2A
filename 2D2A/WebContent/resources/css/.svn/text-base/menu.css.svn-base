
/** Menu Gauche **/

.menu{
    position:absolute;
    margin:0,0,0,0;
    padding:0;
    /*border: 1px black solid;*/
    width: 144px;	
    /*background-color: #6c5f69;*/
    }

.menu_title{
	margin-left:3px;
	color: #6c5f69;
	font-family: arial;
	font-size: 12px;
	font-style:italic;
	font-weight: bold;
	text-decoration:none;
	text-overflow:ellipsis;
	text-align:left;
  	overflow:hidden;
  	width: 144px;	
	white-space:nowrap;
}


.ul_menu {	
    position:absolute;
    /*display:block;*/
    margin:0;
    padding:0;
    /*border: 1px black solid;*/
    width: 143px;	
    /*background-color: #6c5f69;*/
    }

.ul_menu_parent {
    position:static;
    display:block;
    width:124px;
    margin-top:10;
    padding:0;
}

.ul_menu_children {
	visibility:hidden;
    position:absolute;
    display:block;
    width:124px;
    /*margin:0;*/
    padding:0;
    margin-left:124px;
    margin-top:-20px;
    }
    
.menu li{
    list-style:none;
    width:124px;
    height:auto;
    display:inline;        
    margin:0;
    padding:0;    
    }
    
.menu_li_children {
    display:block;
    float:none;
    }

    
/* correct a little IE bug */
html .menu li li{
    display:inline;
    }

#a_menu{
    background-image: url(../img/menu/button_left_menu.gif);
	background-repeat: repeat-x;	
    display:block;
    width:120px;
    padding:2px 0;
    margin-left: 12px;
	margin-right: 12px;	
	margin-top: 0px;
	margin-bottom: 10px;
	color: #FFFFFF;
	font-family: sans-serif;
	font-size: 12px;
	font-weight: bold;
	text-decoration:none;
	text-overflow:ellipsis;
	text-align:center;
  	overflow:hidden;
	white-space:nowrap;
    }


#a_menu:hover{
    color: #d0d2d1;	
	text-decoration: none;
    }
    
/* for a mozilla better display with key nav */
#a_menu:focus{
    background-color: #aaf;
}

.a_menu_linkOver{
    background-color: #eee;
    }

    
