.actualite {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 12px;
	font-weight: normal;
}

.actualite #actualite_left {
	font-weight: bold;
	float:left;
	height:30px;
	padding-top: 10px;
	padding-bottom: 0px;
}

.actualite #actualite_right {
	float:right;
	height:30px;
	padding-top: 10px;
	padding-bottom: 0px;
}

.actualite #actualite_center {
	text-align: center;
	font-size: 10px;
	font-weight: bold;
	color: #800000;
	height:30px;
	bottom: 0px;
	padding-top: 15px;
	padding-bottom: 0px;
}

.actualite #actualite_texte_haut {
	width: 49%;
	float:left;
	height:30px;
	border: 1px black solid;
}

.actualite #actualite_lexique {
	width: 50%;
	float:right;
	height: 32px;
	/*border: 1px black solid;*/
}

.actualite #spacer {
	height: 30px;
	width: 100%;	
}

.actualite #ligne_evt {
	width: 100%;
	clear: right;	
}

.actualite #evt {
	width: 20%;
	float: left;
	border: 1px black solid;
	margin-right: 30px;
	margin-bottom: 30px;
}

/*Propriétés de la page du détail du evt*/
.actualite #evt_left {
	float:left;
	width:50%;
	padding-top: 10px;
	padding-bottom: 0px;
}

.actualite #evt_right {
	float:right;
	width:50%;
	padding-top: 10px;
	padding-bottom: 0px;
}

.actualite #evt_bas {
	float:left;
	width:100%;
	padding-top: 10px;
	padding-bottom: 0px;
}