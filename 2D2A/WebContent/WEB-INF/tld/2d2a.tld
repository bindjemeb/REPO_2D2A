	<!-- Picto Tag -->
	<tag>
		<name>picto</name>
		<tag-class>fr.the2d2a.web.taglibs.PictoTag</tag-class>
		<body-content>JSP</body-content>
		<description>Renders all the picos attached to the children of a channel.</description>
		<attribute>
			<name>idRub</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>id of the channel</description>
		</attribute>
		<attribute>
			<name>varRetour</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description></description>
		</attribute>
		<attribute>
			<name>typeRubrique</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description></description>
		</attribute>
	</tag>
	
	<!-- FilAriane Tag -->
	<tag>
		<name>filAriane</name>
		<tag-class>fr.the2d2a.web.taglibs.FilArianeTag</tag-class>
		<body-content>JSP</body-content>
		<description>Return the list of channels to build the FilAriane.</description>
		<attribute>
			<name>idRub</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>id of the current channel</description>
		</attribute>
		<attribute>
			<name>varRetour</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description></description>
		</attribute>
		<attribute>
			<name>typeRubrique</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description></description>
		</attribute>
	</tag>
	
	<!-- Link Tag -->
	<tag>
		<name>link</name>
		<tag-class>fr.the2d2a.web.taglibs.LinkTag</tag-class>
		<body-content>JSP</body-content>
		<description>Return the list of channels to build the FilAriane.</description>
		<attribute>
			<name>artiste</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>l'artiste</description>
		</attribute>
		<attribute>
			<name>produit</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>le produit</description>
		</attribute>
	</tag>
	
</taglib>