			<description></description>
		</attribute>
		<attribute>
			<name>typeRubrique</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description></description>
		</attribute>
	</tag>
	
	
	<!-- Up Menu tag -->
	<tag>
		<name>upMenu</name>
		<tag-class>fr.the2d2a.web.taglibs.UpMenuTag</tag-class>
		<body-content>JSP</body-content>
		<description>Renders the up menu from the id of the parent channel.</description>
		<attribute>
			<name>idParent</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>id of the parent</description>
		</attribute>
		<attribute>
			<name>varRetour</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
