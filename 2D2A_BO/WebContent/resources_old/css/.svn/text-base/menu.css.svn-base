
/** Menu Gauche **/

/* button menu top */

.link_top_menu {
	color: #000000;
	font-family: sans-serif;
	font-size: 12px;
	font-weight: bold;
	text-decoration: none;
	float: left;
}

.button_top_menu {
	background-image: url(../img/menu/bg_top_menu_button.gif);
	background-repeat: repeat-x;
	height: 20px;
	width: 150px;
	margin-left: 20px;
	margin-right: 20px;	
	margin-top: 0px;
	margin-bottom: 0px;
	padding: 5 5 5 5; 
}

.inner_button_top_menu {
	float: left;
	padding-top: 2px;
}

/* menu gauche */
.link_left_down_menu {
	color: #000000;
	font-family: sans-serif;
	font-size: 12px;
	font-weight: bold;
	text-decoration: none;
}

.link_left_down_menu:hover {
	color: #d0d2d1;
	font-family: sans-serif;
	font-size: 12px;
	text-decoration: none;
}

.link_left_down_menu:active {
	color: #d0d2d1;
	font-family: sans-serif;
	font-size: 12px;
	text-decoration: none;
}

.button_left_down_menu {
	background-image: url(../img/menu/button_left_down_menu.gif);
	background-repeat: repeat-x;
	height: 20px;
	border-width: 1px;
	border-color: black;
	margin-left: 5px;
	margin-right: 5px;	
	margin-top: 2px;
	padding-top: 2px;
}
